<%- include("partials/header"); %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp! <i class="fas fa-campground"></i></h1>
        <p class="lead">View our hand-picked campgrounds from all over the world!</p>
        <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
    </header>
    
    <!-- <a href="/">Home</a> -->
    
    <div class="row align-items-center">
        <% for(var i = 0; i < campgrounds.length; i++) { %>
            <div class="col-12 col-sm-6 col-md-3 col-lg-4">
                <div class="card mx-auto mb-3" style="width: 18rem;">
                    <img src="<%= campgrounds[i].image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= campgrounds[i].name %></h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>


<%- include("partials/footer"); %>