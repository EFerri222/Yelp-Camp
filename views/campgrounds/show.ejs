<%- include("../partials/header"); %>

<h1><%= campground.name %></h1>

<img src="<%= campground.image %>" alt="" style="width:30%;"><br><br>

<p><%= campground.description %></p>

<h4>Comments</h4>
<ul id="comments-list">
    <% campground.comments.forEach(function(comment) { %>
        <li>"<%= comment.text %>" -<%= comment.author %> </li>
    <% }) %>
</ul>

<a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-primary">Add New Comment</a>

<br><br><a href="/index">Back to Campgrounds</a>

<%- include("../partials/footer"); %>