<%- include("../partials/header"); %>

<div class="container text-center">
    <h1>Edit Comment</h1><br>
    <div class="row">

        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>

    </div>

</div>

<div class="text-center">
    <a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<%- include("../partials/footer"); %>